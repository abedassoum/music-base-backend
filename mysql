const mysql = require('mysql');

// Create a MySQL connection
const con = mysql.createConnection({
  host: 'localhost',
  port: 3306,
  user: 'your_username',
  password: 'your_password',
  database: 'MusicBase',
});

// Sample artist data including genres and labels
const artistData = {
  name: 'New Artist',
  birthdate: '1990-01-01',
  activeSince: 2005,
  website: 'https://example.com',
  image: 'https://example.com/image.jpg',
  shortDescription: 'Sample artist description',
  favorite: false,
  genres: ['R&B', 'Pop'], // Replace with your genre array
  labels: ['Columbia Records', 'Parkwood Entertainment'], // Replace with your label array
};

// Connect to the database
con.connect((err) => {
  if (err) {
    console.error('Error connecting to MySQL:', err);
    return;
  }
  console.log('Connected to MySQL database');

  // Step 1: Insert the artist record
  con.query('INSERT INTO artists SET ?', artistData, (err, result) => {
    if (err) {
      console.error('Error inserting artist:', err);
      return;
    }
    const artistId = result.insertId; // Get the generated artist ID

    // Step 2: Insert genres into artist_to_genres
    for (const genre of artistData.genres) {
      con.query(
        'INSERT INTO artist_to_genres (artist_id, genre_id) VALUES (?, (SELECT id FROM artist_genres WHERE genre = ?))',
        [artistId, genre],
        (err) => {
          if (err) {
            console.error('Error inserting genre:', err);
          }
        }
      );
    }

    // Step 3: Insert labels into artist_to_labels
    for (const label of artistData.labels) {
      con.query(
        'INSERT INTO artist_to_labels (artist_id, label_id) VALUES (?, (SELECT id FROM artist_labels WHERE label = ?))',
        [artistId, label],
        (err) => {
          if (err) {
            console.error('Error inserting label:', err);
          }
        }
      );
    }

    // Close the MySQL connection when done
    con.end((err) => {
      if (err) {
        console.error('Error closing MySQL connection:', err);
      }
      console.log('Connection closed');
    });
  });
});
